
<div>
  <% @posts.each do |post| %>
    <p><%= post.message %></p>
    <p><%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></p>
    <%= button_to 'Delete Post', {:controller => :posts,
        :action => 'destroy', :id => post.id }, :method => :delete, class: 'btn btn-primary' %>
    <%= button_to 'Update Post', {:controller => :posts,
        :action => 'update', :id => post.id } %>
  <% end %>

  <%= link_to new_post_path do %>
    New post
  <% end %>
</div>
