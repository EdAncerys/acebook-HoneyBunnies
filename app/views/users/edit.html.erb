<h1>Edit Profile</h1>

User ID <%= @user.id %>

<% if @user.image.attached? %>
  <div>
    <%= image_tag(@user.image, class: 'img-thumbnail float-left') %>
  </div>
<% end%>

<div class='row'>
  <div class='col'>
    <%= form_for @user, :url => {:controller => 'users', :action => 'update'} do |f| %>

      <%= f.label 'First Name' %>
      <%= f.text_field :fname %> <br />

      <%= f.label 'Last Name' %>
      <%= f.text_field :lname %> <br />

      <%= f.label :email %>
      <%= f.text_field :email %> <br />

      <%= f.label :image %>
      <%= f.file_field :image %> <br />

      <%= f.label :password %>
      <%= f.password_field :password %> <br />

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %> <br />

      <%= f.submit "Update Profile" %>

    <% end %>
  </div>
</div>